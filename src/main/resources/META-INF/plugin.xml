<idea-plugin>
    <id>com.hoverdict.plugin</id>
    <name>Hover Translate</name>
    <version>1.0.0.1</version>
    <vendor email="helloxiaojii@gmail.com" url="https://github.com/hoverdict">Hover Translate Team</vendor>

    <description><![CDATA[
    <p>Hover Translate — Offline English-Chinese hover translation plugin for JetBrains IDEs. 700K+ dictionary entries, no API keys, no network required.</p>

    <p>离线英汉悬停翻译插件，鼠标悬停即可翻译，无需联网，开箱即用。</p>

    <ul>
        <li>Hover over any word to see its Chinese translation instantly</li>
        <li>700K+ offline dictionary powered by ECDICT</li>
        <li>Smart camelCase / snake_case identifier splitting</li>
        <li>Dark and Light theme support</li>
        <li>Configurable delay, font size, opacity and shortcuts</li>
    </ul>

    <p>Usage: Install → hover over any word → done. Settings: <code>Tools → Hover Translate</code></p>
    ]]></description>

    <change-notes><![CDATA[
    <b>1.0.0.1</b> — Cleaned up plugin structure, improved user experience.<br/>
    <b>1.0.0</b> — Initial release.
    ]]></change-notes>

    <idea-version since-build="232" until-build="252.*"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.hovertranslate.settings.HoverTranslateSettings"/>
        <postStartupActivity
                implementation="com.hovertranslate.PluginStartupActivity"/>
        <notificationGroup id="HoverTranslate.Notifications"
                           displayType="BALLOON"
                           isLogByDefault="false"/>
    </extensions>

    <actions>
        <action id="HoverTranslate.Toolbar"
                class="com.hovertranslate.actions.HoverTranslateToolbarAction"
                text="Hover Translate"
                description="Hover Translate">
            <add-to-group group-id="NavBarToolBar" anchor="last"/>
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
        </action>

        <group id="HoverTranslate.Menu" text="Hover Translate" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="HoverTranslate.Toggle"
                    class="com.hovertranslate.actions.ToggleTranslationAction"
                    text="Toggle Translation"
                    description="Enable or disable hover translation">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift T"/>
            </action>
            <action id="HoverTranslate.Settings"
                    class="com.hovertranslate.actions.OpenSettingsAction"
                    text="Hover Translate Settings"
                    description="Open Hover Translate settings">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift D"/>
            </action>
        </group>
    </actions>
</idea-plugin>
