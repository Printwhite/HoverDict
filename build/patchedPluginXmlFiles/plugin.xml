<idea-plugin>
  <id>com.hoverdict.plugin</id>
  <name>HoverDict</name>
  <version>1.0.0</version>
  <vendor email="helloxiaojii@gmail.com" url="https://github.com/hoverdict">HoverDict Team</vendor>
  <description><![CDATA[<p><b>HoverDict</b> — Instant offline hover translation for JetBrains IDEs.</p>
    <p>Hover over any English word in the editor to see its Chinese translation.
    Powered by ECDICT open-source dictionary with 700,000+ entries.
    No API keys, no network required.</p>
    <ul>
        <li>Instant hover translation with configurable delay</li>
        <li>700K+ word offline dictionary (EN↔ZH)</li>
        <li>Smart camelCase and snake_case identifier splitting</li>
        <li>Multi-monitor aware popup positioning</li>
        <li>Adapts to both Light and Dark themes</li>
    </ul>
    <p><b>Usage:</b> Install → hover over any word → done. Settings: <code>Tools → HoverDict</code></p>]]></description>
  <change-notes><![CDATA[<b>1.0.0</b> — Initial release: offline EN↔ZH dictionary, hover translation, identifier splitting, multi-monitor support.]]></change-notes>
  <idea-version since-build="232" until-build="252.*" />
  <depends>com.intellij.modules.platform</depends>
  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.hoverdict.settings.HoverDictSettings" />
    <postStartupActivity implementation="com.hoverdict.PluginStartupActivity" />
    <notificationGroup id="HoverDict.Notifications" displayType="BALLOON" isLogByDefault="false" />
  </extensions>
  <actions>
    <action id="HoverDict.Toolbar" class="com.hoverdict.actions.HoverDictToolbarAction" text="HoverDict" description="HoverDict hover translation" icon="/icons/hoverdict16.svg">
      <add-to-group group-id="NavBarToolBar" anchor="last" />
      <add-to-group group-id="MainToolbarRight" anchor="last" />
    </action>
    <group id="HoverDict.Menu" text="HoverDict" popup="true">
      <add-to-group group-id="ToolsMenu" anchor="last" />
      <action id="HoverDict.Toggle" class="com.hoverdict.actions.ToggleTranslationAction" text="Toggle Translation" description="Enable or disable hover translation">
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift T" />
      </action>
      <action id="HoverDict.Settings" class="com.hoverdict.actions.OpenSettingsAction" text="HoverDict Settings" description="Open HoverDict settings">
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift D" />
      </action>
      <action id="HoverDict.Sponsor" class="com.hoverdict.actions.OpenSponsorAction" text="About" description="About HoverDict" />
    </group>
  </actions>
</idea-plugin>
